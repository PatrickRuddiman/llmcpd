{
  "name": "llmcpd",
  "version": "0.1.0",
  "description": "LLMs.txt/LLMs-full.txt to MCP server (stdio) with caching and search",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/PatrickRuddiman/llmcpd"
  },
  "bin": {
    "llmcpd": "dist/cli.js"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "start": "node dist/cli.js",
    "release": "semantic-release"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "commander": "^12.0.0",
    "turndown": "^7.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@actions/core": "^2.0.2",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.4",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/node": "^20.11.30",
    "@types/turndown": "^5.0.4",
    "semantic-release": "^25.0.2",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
