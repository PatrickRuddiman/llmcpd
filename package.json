{
  "name": "llmcpd",
  "version": "0.1.0",
  "description": "LLMs.txt/LLMs-full.txt to MCP server (stdio) with caching and search",
  "license": "MIT",
  "type": "module",
  "bin": {
    "llmcpd": "dist/cli.js"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "commander": "^12.0.0",
    "turndown": "^7.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}